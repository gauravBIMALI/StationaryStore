
@using UserRoles.ViewModels;
@model SellerRegisterViewModel;

@{
    ViewData["Title"] = "Seller Registration";
}
<head>
   
    <style>
        .card {
            border-radius: 1rem;
            overflow: hidden;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
                transform: translateY(-2px);
            }
    </style>
</head>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0"><i class="fas fa-store me-2"></i>Seller Registration</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateSeller" asp-controller="Account" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <!-- Name -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Enter Your Name" required />
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter Your Email" required />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Age -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="number" asp-for="Age" class="form-control" id="age" placeholder="Enter Your Age" required />
                                    <label asp-for="Age"></label>
                                    <span asp-validation-for="Age" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Location -->
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input type="text" asp-for="Location" class="form-control" id="location" placeholder="Enter Your Location" required />
                                    <label asp-for="Location"></label>
                                    <span asp-validation-for="Location" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Business Name -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" asp-for="BusinessName" class="form-control" id="businessName" placeholder="Enter Your Business Name" required />
                                    <label asp-for="BusinessName"></label>
                                    <span asp-validation-for="BusinessName" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Business Type -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="BusinessType" class="form-select" id="businessType" required>
                                        <option value="">-- Select Business Type --</option>
                                        <option value="Stationery Retail">Stationery Retail</option>
                                        <option value="Office Supplies">Office Supplies</option>
                                        <option value="Art & Craft Store">Art & Craft Store</option>
                                        <option value="Bookstore with Stationery">Bookstore with Stationery</option>
                                        <option value="School Supplies">School Supplies</option>
                                        <option value="Wholesale Stationery">Wholesale Stationery</option>
                                        <option value="Online Stationery Shop">Online Stationery Shop</option>
                                        <option value="Custom Printing Services">Custom Printing Services</option>
                                    </select>
                                    <label asp-for="BusinessType"></label>
                                    <span asp-validation-for="BusinessType" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="tel" asp-for="Phone" class="form-control" id="phone" placeholder="Enter Your Phone Number" required />
                                    <label asp-for="Phone"></label>
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter Your Password" required />
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="form-text">Minimum 6 characters</div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Enter Confirm Password" required />
                                    <label asp-for="ConfirmPassword"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100 py-3">
                                    <i class="fas fa-user-plus me-2"></i>Register as Seller
                                </button>
                            </div>

                            <!-- Back Link -->
                            <div class="col-12 text-center mt-3">
                                <b>
                                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                        <i class="fas fa-arrow-left me-1"></i>Back to Home
                                    </a>
                                </b>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Client-side validation enhancement
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}