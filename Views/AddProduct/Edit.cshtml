@model ClzProject.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i> Edit Product
                    </h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                   
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                      
                        <input type="hidden" asp-for="ProductID" />
                        <input type="hidden" asp-for="SellerId" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        <input type="hidden" asp-for="Image" />

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-semibold"></label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductDescription" class="form-label fw-semibold"></label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductPrice" class="form-label fw-semibold"></label>
                            <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ProductPrice" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductQuantity" class="form-label fw-semibold"></label>
                            <input asp-for="ProductQuantity" class="form-control" type="number" />
                            <span asp-validation-for="ProductQuantity" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryType" class="form-label fw-semibold"></label>
                            <select asp-for="CategoryType" asp-items="ViewBag.Categories" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                        </div>

                      
                        <div class="mb-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-image me-1"></i> Upload New Image (Optional)
                            </label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Leave empty to keep current image</small>
                        </div>

                        <!-- Display current image if exists -->
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Current Image:</label>
                                <div>
                                    <img src="data:image/jpeg;base64,@Model.Image" alt="Current Product Image"
                                         class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>