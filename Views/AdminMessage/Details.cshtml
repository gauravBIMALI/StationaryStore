@model ClzProject.Models.BuyerContactMessage

@{
    ViewData["Title"] = "Message Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-envelope-open me-2"></i>Buyer Message Details</h4>
                    <div>
                        <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-success btn-sm me-2">
                            <i class="fas fa-reply me-1"></i>Reply
                        </a>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-user me-2"></i>Personal Information</h5>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Full Name:</strong></td>
                                        <td>@Html.DisplayFor(model => model.Name)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@Html.DisplayFor(model => model.Email)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Age:</strong></td>
                                        <td>@Html.DisplayFor(model => model.Age) years</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone:</strong></td>
                                        <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Location:</strong></td>
                                        <td>@Html.DisplayFor(model => model.Location)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-building me-2"></i>Business Information</h5>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Business Name:</strong></td>
                                        <td>@Html.DisplayFor(model => model.BusinessName)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Business Type:</strong></td>
                                        <td>@Html.DisplayFor(model => model.BusinessType)</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Submitted:</strong></td>
                                        <td>@Model.SubmittedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            @if (Model.IsReplied)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Replied
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Pending
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <hr>

                    <h5 class="text-primary mb-3"><i class="fas fa-file-alt me-2"></i>Uploaded Documents</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">Citizenship Document</h6>
                                </div>
                                <div class="card-body text-center">
                                    <i class="fas fa-id-card fa-3x text-primary mb-3"></i>
                                    <p class="card-text">
                                        <small class="text-muted">@ViewBag.CitizenshipFileName</small>
                                    </p>
                                    <div class="d-grid gap-2">
                                        <a asp-action="ViewDocument" asp-route-id="@Model.Id" asp-route-docType="citizenship"
                                           target="_blank" class="btn btn-primary">
                                            <i class="fas fa-eye me-1"></i>View Document
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">PAN Document</h6>
                                </div>
                                <div class="card-body text-center">
                                    <i class="fas fa-file-invoice fa-3x text-info mb-3"></i>
                                    <p class="card-text">
                                        <small class="text-muted">@ViewBag.PANFileName</small>
                                    </p>
                                    <div class="d-grid gap-2">
                                        <a asp-action="ViewDocument" asp-route-id="@Model.Id" asp-route-docType="pan"
                                           target="_blank" class="btn btn-info">
                                            <i class="fas fa-eye me-1"></i>View Document
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsReplied && !string.IsNullOrEmpty(Model.AdminReply))
                    {
                        <hr>
                        <h5 class="text-success mb-3"><i class="fas fa-reply me-2"></i>Admin Reply</h5>
                        <div class="alert alert-success">
                            <div class="mb-2">
                                @Html.DisplayFor(model => model.AdminReply)
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>Replied on: @Model.RepliedAt?.ToString("MMM dd, yyyy hh:mm tt")
                            </small>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Messages
                        </a>
                        @if (!Model.IsReplied)
                        {
                            <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="fas fa-reply me-1"></i>Send Reply
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>