@model List<ClzProject.Models.AdminCommission>

@{
    ViewData["Title"] = "Commission Report";
    var currentStatus = ViewBag.CurrentStatus as string ?? "All";
    var totalProductAmount = (decimal)ViewBag.TotalProductAmount;
    var totalCommission = (decimal)ViewBag.TotalCommission;
    var totalSellerEarning = (decimal)ViewBag.TotalSellerEarning;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-file-invoice-dollar text-primary me-2"></i>Commission Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Commission Report</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Sales Amount</h6>
                    <h3>Rs. @totalProductAmount.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Your Commission (5%)</h6>
                    <h3>Rs. @totalCommission.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Sellers' Earnings (95%)</h6>
                    <h3>Rs. @totalSellerEarning.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="CommissionReport" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="All" selected="@(currentStatus == "All")">All</option>
                        <option value="Pending" selected="@(currentStatus == "Pending")">Pending</option>
                        <option value="Confirmed" selected="@(currentStatus == "Confirmed")">Confirmed</option>
                        <option value="Shipped" selected="@(currentStatus == "Shipped")">Shipped</option>
                        <option value="Delivered" selected="@(currentStatus == "Delivered")">Delivered</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Commissions Table -->
    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Commission Records (@Model.Count)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Order #</th>
                                <th>Seller</th>
                                <th>Product Amount</th>
                                <th>Commission Rate</th>
                                <th>Commission</th>
                                <th>Seller Earning</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var commission in Model)
                            {
                                <tr>
                                    <td>
                                        <small>@commission.CreatedAt.ToString("dd MMM yyyy")</small><br>
                                        <small class="text-muted">@commission.CreatedAt.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@commission.Order.OrderNumber</strong>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@(commission.Seller?.BusinessName ?? commission.Seller?.FullName ?? "Unknown")</strong>
                                        </div>
                                        <small class="text-muted">@commission.Seller?.Email</small>
                                    </td>
                                    <td>
                                        <strong>Rs. @commission.ProductAmount.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@commission.CommissionRate%</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">Rs. @commission.CommissionAmount.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        <strong class="text-primary">Rs. @commission.SellerEarning.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        @if (commission.OrderStatus == "Pending")
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else if (commission.OrderStatus == "Confirmed")
                                        {
                                            <span class="badge bg-info">Confirmed</span>
                                        }
                                        else if (commission.OrderStatus == "Shipped")
                                        {
                                            <span class="badge bg-primary">Shipped</span>
                                        }
                                        else if (commission.OrderStatus == "Delivered")
                                        {
                                            <span class="badge bg-success">Delivered</span>
                                            @if (commission.CompletedAt.HasValue)
                                            {
                                                <br>
                                
                                                <small class="text-muted">@commission.CompletedAt.Value.ToString("dd MMM")</small>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">TOTALS:</th>
                                <th>Rs. @totalProductAmount.ToString("N2")</th>
                                <th></th>
                                <th class="text-success">Rs. @totalCommission.ToString("N2")</th>
                                <th class="text-primary">Rs. @totalSellerEarning.ToString("N2")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-file-invoice fa-5x text-muted mb-3"></i>
                <h4>No Commission Records Found</h4>
                <p class="text-muted">Try adjusting your filters</p>
            </div>
        </div>
    }
</div>