@model ClzProject.ViewModels.ProductDetailsViewModel
@{
    ViewData["Title"] = "Delete Product - Admin";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Product
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this product?
                    </div>

                    <div class="row">
                        <!-- Product Image -->
                        <div class="col-md-4 mb-3">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="data:image/jpeg;base64,@Model.Image"
                                     alt="@Model.ProductName"
                                     class="img-fluid rounded"
                                     style="max-height: 200px; width: 100%; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>

                        <!-- Product Info -->
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Product Name:</td>
                                    <td>@Model.ProductName</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Price:</td>
                                    <td class="text-success">@Model.ProductPrice.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Quantity:</td>
                                    <td>@Model.ProductQuantity units</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Category:</td>
                                    <td>@Model.CategoryType</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Seller:</td>
                                    <td>@Model.SellerName (@Model.SellerBusinessName)</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Created:</td>
                                    <td>@Model.CreatedAt.ToString("dd MMM yyyy")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="ListProducts" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancel
                        </a>

                        <form asp-action="DeleteProductConfirmed" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.ProductID" />
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you absolutely sure you want to delete this product?')">
                                <i class="fas fa-trash me-1"></i> Yes, Delete Product
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>