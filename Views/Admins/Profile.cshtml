@using Microsoft.IdentityModel.Tokens
@model ClzProject.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
}

<div class="profile-container">
    <div class="profile-header">
        <h2 class="profile-title">
            <i class="fas fa-user-tie"></i> Admin Profile
        </h2>
        <div class="profile-actions">
            <a asp-controller="Admins" asp-action="EditProfile" class="btn btn-primary btn-edit">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
            
        </div>
    </div>

    <!-- Profile Image Section -->
    <div class="profile-image-section">
        <img id="profileImagePreview"
             src="@(string.IsNullOrEmpty(Model.ProfileImageBase64) ? "/images/blank.png" : $"data:image/jpeg;base64,{Model.ProfileImageBase64}")"
             class="profile-image rounded-circle"
             style="height: 170px; width:170px;"
             alt="Profile Image" />

    </div>

    <div class="profile-content">
        <div class="profile-section">
            <h3 class="section-title">
                <i class="fas fa-id-card"></i> Personal Information
            </h3>
            <div class="detail-grid">
                <div class="detail-card">
                    <div class="detail-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="detail-content">
                        <span class="detail-label">Full Name</span>
                        <span class="detail-value">@Model.Name</span>
                    </div>
                </div>

                <div class="detail-card">
                    <div class="detail-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="detail-content">
                        <span class="detail-label">Email</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // Client-side image preview functionality
        document.getElementById('profileImageInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profileImagePreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
