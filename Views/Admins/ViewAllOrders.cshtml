@model List<ClzProject.Models.Order>

@{
    ViewData["Title"] = "All Orders";
    var currentStatus = ViewBag.CurrentStatus as string ?? "All";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-shopping-cart text-primary me-2"></i>All Orders</h2>
            
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card mb-4">
        <div class="card-body">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "All" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="All">
                        All Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "Pending" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="Pending">
                        Pending
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "Confirmed" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="Confirmed">
                        Confirmed
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "Shipped" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="Shipped">
                        Shipped
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "Delivered" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="Delivered">
                        Delivered
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentStatus == "Cancelled" ? "active" : "")"
                       asp-action="ViewAllOrders" asp-route-status="Cancelled">
                        Cancelled
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Orders Table -->
    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Orders List (@Model.Count)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Total Amount</th>
                                <th>Payment</th>
                                <th>Status</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">@order.OrderNumber</strong>
                                    </td>
                                    <td>
                                        <small>@order.OrderDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td>
                                        <div>@order.DeliveryName</div>
                                        <small class="text-muted">@order.DeliveryPhone</small>
                                    </td>
                                    <td>
                                        @order.OrderItems.Count item(s)
                                    </td>
                                    <td>
                                        <strong class="text-success">Rs. @((order.TotalAmount + order.DeliveryFee).ToString("N2"))</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@order.PaymentMethod</span>
                                    </td>
                                    <td>
                                        @if (order.OrderStatus == "Pending")
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else if (order.OrderStatus == "Confirmed")
                                        {
                                            <span class="badge bg-info">Confirmed</span>
                                        }
                                        else if (order.OrderStatus == "Shipped")
                                        {
                                            <span class="badge bg-primary">Shipped</span>
                                        }
                                        else if (order.OrderStatus == "Delivered")
                                        {
                                            <span class="badge bg-success">Delivered</span>
                                        }
                                        else if (order.OrderStatus == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
                <h4>No Orders Found</h4>
            </div>
        </div>
    }
</div>