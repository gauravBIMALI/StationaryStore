@model ClzProject.Models.BuyerContactMessage

@{
    ViewData["Title"] = "Submission Details";
}

@{
    ViewData["Title"] = "Submission Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-eye me-2"></i>Submission Details</h4>
                    <a asp-action="MySubmissions" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-user me-2"></i>Personal Information</h5>
                            <div class="mb-2">
                                <strong>Name:</strong> @Html.DisplayFor(model => model.Name)
                            </div>
                            <div class="mb-2">
                                <strong>Email:</strong> @Html.DisplayFor(model => model.Email)
                            </div>
                            <div class="mb-2">
                                <strong>Age:</strong> @Html.DisplayFor(model => model.Age)
                            </div>
                            <div class="mb-2">
                                <strong>Phone:</strong> @Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                            <div class="mb-3">
                                <strong>Location:</strong> @Html.DisplayFor(model => model.Location)
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-building me-2"></i>Business Information</h5>
                            <div class="mb-2">
                                <strong>Business Name:</strong> @Html.DisplayFor(model => model.BusinessName)
                            </div>
                            <div class="mb-2">
                                <strong>Business Type:</strong> @Html.DisplayFor(model => model.BusinessType)
                            </div>
                            <div class="mb-2">
                                <strong>Submitted:</strong> @Model.SubmittedAt.ToString("MMM dd, yyyy hh:mm tt")
                            </div>
                            <div class="mb-3">
                                <strong>Status:</strong>
                                @if (Model.IsReplied)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Replied
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock me-1"></i>Pending
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <hr>

                    <h5 class="text-primary mb-3"><i class="fas fa-file-alt me-2"></i>Documents</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Citizenship Document</h6>
                                    <p class="card-text">
                                        <i class="fas fa-file fa-2x text-primary mb-2"></i><br>
                                        <small class="text-muted">@ViewBag.CitizenshipFileName</small>
                                    </p>
                                    <a href="@Model.CitizenshipDocumentPath" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-download me-1"></i>View/Download
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h6 class="card-title">PAN Document</h6>
                                    <p class="card-text">
                                        <i class="fas fa-file fa-2x text-primary mb-2"></i><br>
                                        <small class="text-muted">@ViewBag.PANFileName</small>
                                    </p>
                                    <a href="@Model.PANDocumentPath" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-download me-1"></i>View/Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsReplied && !string.IsNullOrEmpty(Model.AdminReply))
                    {
                        <hr>
                        <h5 class="text-success mb-3"><i class="fas fa-reply me-2"></i>Admin Reply</h5>
                        <div class="alert alert-success">
                            <div class="mb-2">
                                <strong>Reply:</strong> @Html.DisplayFor(model => model.AdminReply)
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>Replied on: @Model.RepliedAt?.ToString("MMM dd, yyyy hh:mm tt")
                            </small>
                        </div>
                    }

                    <div class="mt-3">
                        <a asp-action="MySubmissions" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to My Submissions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>