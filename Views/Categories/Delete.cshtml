@model ClzProject.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="fas fa-trash-alt me-2"></i>Delete Category
            </h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this category?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryType)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
