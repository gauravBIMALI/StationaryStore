@model IEnumerable<ClzProject.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Category List</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus me-1"></i> Create New
        </a>
    </div>

    <table class="table table-bordered table-striped shadow-sm rounded-3">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CategoryType)</th>
                <th style="width: 25%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryType</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this category?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
