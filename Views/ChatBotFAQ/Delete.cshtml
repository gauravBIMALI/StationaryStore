@model ClzProject.Models.ChatBotFAQ
@{
    ViewData["Title"] = "Delete FAQ";
}

<div class="container mt-4">
    <h2 class="text-danger fw-bold mb-3">Delete FAQ</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="mb-3">Are you sure you want to delete this FAQ?</h5>

            <dl class="row">
                <dt class="col-sm-3">Question</dt>
                <dd class="col-sm-9">@Model.Question</dd>

                <dt class="col-sm-3">Answer</dt>
                <dd class="col-sm-9">@Model.Answer</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-danger shadow-sm">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
