@model ClzProject.Models.ChatBotFAQ
@{
    ViewData["Title"] = "Edit FAQ";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-3">Edit FAQ</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Question</label>
                    <input asp-for="Question" class="form-control border-primary" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Answer</label>
                    <textarea asp-for="Answer" class="form-control border-primary" rows="4"></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Role</label>
                    <select asp-for="Role" class="form-select border-primary">
                        <option value="All">All</option>
                        <option value="Buyer">Buyer</option>
                        <option value="Seller">Seller</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary shadow-sm">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
