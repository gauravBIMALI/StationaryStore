@model IEnumerable<ClzProject.Models.ChatBotFAQ>
@{
    ViewData["Title"] = "FAQs Chatbot";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">FAQs Chatbot</h2>
        <a class="btn btn-primary shadow-sm" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Add New FAQ
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Question</td>
                            <td>@item.Answer</td>
                            <td>
                                <span class="badge bg-primary">@item.Role</span>
                            </td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
