@model ClzProject.Models.FAQ

@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete FAQ</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading"><i class="fas fa-question-circle me-2"></i>Are you sure you want to delete this FAQ?</h4>
                <p class="mb-0">This action cannot be undone. All information will be permanently deleted.</p>
            </div>

            <div class="faq-details mb-4">
                <div class="row mb-3">
                    <div class="col-md-2 fw-bold text-muted">
                        <i class="fas fa-question me-2"></i>Question:
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Question)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2 fw-bold text-muted">
                        <i class="fas fa-comment-dots me-2"></i>Answer:
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Answer)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2 fw-bold text-muted">
                        <i class="fas fa-calendar-plus me-2"></i>Created:
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 fw-bold text-muted">
                        <i class="fas fa-calendar-edit me-2"></i>Modified:
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ModifiedDate)
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="FAQID" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<head>
    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            font-size: 1.25rem;
        }

        .faq-details {
            background-color: #f8f9fa;
            padding: 1.5rem;
            border-radius: 0.5rem;
        }

        .btn-danger {
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
                transform: translateY(-2px);
            }

        .alert-warning {
            border-left: 5px solid #ffc107;
        }
    </style>
</head>
    
