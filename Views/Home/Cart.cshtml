@model ClzProject.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="fas fa-shopping-cart text-primary"></i> My Shopping Cart
            </h2>
            
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.CartItems.Any())
    {
        <div class="row">
            <!-- Cart Items Column -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            Cart Items (@Model.UniqueProducts Products)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="cart-item p-3 border-bottom">
                                <div class="row align-items-center g-3">
                                    <!-- Product Image -->
                                    <div class="col-md-2 col-3">
                                        @if (!string.IsNullOrEmpty(item.Image))
                                        {
                                            <img src="data:image/jpeg;base64,@item.Image"
                                                 alt="@item.ProductName"
                                                 class="img-fluid rounded shadow-sm"
                                                 style="max-height: 100px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                 style="height: 100px;">
                                                <i class="fas fa-image fa-2x text-muted"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- Product Info -->
                                    <div class="col-md-4 col-9">
                                        <h6 class="mb-2">
                                            <a href="@Url.Action("ProductDetails", new { id = item.ProductID })"
                                               class="text-decoration-none text-dark fw-semibold">
                                                @item.ProductName
                                            </a>
                                        </h6>
                                        <p class="text-muted small mb-1">
                                            <i class="fas fa-store me-1"></i>
                                            @(string.IsNullOrEmpty(item.SellerBusinessName) ? item.SellerName : item.SellerBusinessName)
                                        </p>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-box me-1"></i>Stock: @item.AvailableStock units
                                        </p>
                                    </div>

                                    <!-- Price -->
                                    <div class="col-md-2 col-6 text-center">
                                        <p class="mb-0 fw-bold">Rs. @item.ProductPrice.ToString("N2")</p>
                                        <small class="text-muted">per unit</small>
                                    </div>

                                    <!-- Quantity -->
                                    <div class="col-md-2 col-6">
                                        <div class="input-group input-group-sm">
                                            <button class="btn btn-outline-secondary" type="button"
                                                    onclick="updateQty(@item.ProductID, @(item.Quantity - 1), @item.AvailableStock)">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="number" class="form-control text-center"
                                                   id="qty_@item.ProductID"
                                                   value="@item.Quantity"
                                                   min="1"
                                                   max="@item.AvailableStock"
                                                   >
                                            <button class="btn btn-outline-secondary" type="button"
                                                    onclick="updateQty(@item.ProductID, @(item.Quantity + 1), @item.AvailableStock)">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Subtotal & Remove -->
                                    <div class="col-md-2 col-12 text-md-end text-center">
                                        <p class="mb-2 fw-bold text-success fs-5">
                                            Rs. @item.SubTotal.ToString("N2")
                                        </p>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="removeItem(@item.ProductID, '@item.ProductName')">
                                            <i class="fas fa-trash-alt me-1"></i>Remove
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                    <button type="button" class="btn btn-outline-danger" onclick="clearCart()">
                        <i class="fas fa-trash-alt me-2"></i>Clear Cart
                    </button>
                </div>
            </div>

            <!-- Order Summary Column -->
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span>Subtotal (@Model.TotalItems items):</span>
                            <strong>Rs. @Model.TotalAmount.ToString("N2")</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span>Delivery Fee:</span>
                            <strong>Rs. 60.00</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0">Total:</h5>
                            <h5 class="mb-0 text-success">Rs. @((Model.TotalAmount + 60).ToString("N2"))</h5>
                        </div>

                        <a href="@Url.Action("Checkout", "Home")" class="btn btn-success btn-lg w-100 mb-2">
                            <i class="fas fa-check-circle me-2"></i>Proceed to Checkout
                        </a>

                        <div class="mt-3 p-3 bg-light rounded">
                            <h6 class="mb-2">
                                <i class="fas fa-shield-alt text-primary me-2"></i>Safe & Secure
                            </h6>
                            <ul class="list-unstyled small mb-0">
                                <li><i class="fas fa-check text-success me-2"></i>Cash on Delivery Available</li>
                                <li><i class="fas fa-check text-success me-2"></i>ESewa Payment </li>
                                <li><i class="fas fa-check text-success me-2"></i>7 Days Return Policy</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                        <h3 class="mb-3">Your cart is empty</h3>
                        <p class="text-muted mb-4">Looks like you haven't added anything to your cart yet.</p>
                        <a asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .cart-item {
        transition: background-color 0.2s ease;
    }

        .cart-item:hover {
            background-color: #f8f9fa;
        }

    .sticky-top {
        position: sticky;
        z-index: 1020;
    }
</style>

@section Scripts {
    <script>
        function updateQty(productId, newQty, maxStock) {
            if (newQty < 1) {
                removeItem(productId, 'this item');
                return;
            }

            if (newQty > maxStock) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Stock Limit',
                    text: `Only ${maxStock} units available in stock`,
                    confirmButtonColor: '#ffc107'
                });
                return;
            }

            // Show loading
            Swal.fire({
                title: 'Updating...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            // Create form and submit
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("UpdateCartQuantity", "Home")';

            const fields = {
                productId: productId,
                quantity: newQty
            };

            Object.keys(fields).forEach(key => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = key;
                input.value = fields[key];
                form.appendChild(input);
            });

            document.body.appendChild(form);
            form.submit();
        }

        function removeItem(productId, productName) {
            Swal.fire({
                title: 'Remove Item?',
                text: `Remove "${productName}" from cart?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, remove it',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("RemoveFromCart", "Home")';

                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'productId';
                    input.value = productId;
                    form.appendChild(input);

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        function clearCart() {
            Swal.fire({
                title: 'Clear Cart?',
                text: 'This will remove all items from your cart',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, clear cart',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("ClearCart", "Home")';
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
}