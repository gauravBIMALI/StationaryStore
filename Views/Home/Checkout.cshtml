@model ClzProject.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="fas fa-shopping-bag text-primary"></i> Checkout
            </h2>
            
        </div>
    </div>

    <form asp-action="PlaceOrder" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-8">
                <!-- Delivery Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-shipping-fast me-2"></i>Delivery Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DeliveryName" class="form-label"></label>
                                <input asp-for="DeliveryName" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="DeliveryName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DeliveryPhone" class="form-label"></label>
                                <input asp-for="DeliveryPhone" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="DeliveryPhone" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="DeliveryAddress" class="form-label"></label>
                                <textarea asp-for="DeliveryAddress" class="form-control" rows="2"
                                          placeholder="House no., Building name, Street"></textarea>
                                <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DeliveryCity" class="form-label"></label>
                                <input asp-for="DeliveryCity" class="form-control" placeholder="Enter city" />
                                <span asp-validation-for="DeliveryCity" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DeliveryState" class="form-label"></label>
                                <input asp-for="DeliveryState" class="form-control" placeholder="Enter state/province (Optional)" />
                                <span asp-validation-for="DeliveryState" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="DeliveryNote" class="form-label"></label>
                                <textarea asp-for="DeliveryNote" class="form-control" rows="2"
                                          placeholder="Any special instructions for delivery"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-credit-card me-2"></i>Payment Method
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3 p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod"
                                   value="COD" id="cod" checked>
                            <label class="form-check-label w-100" for="cod">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><i class="fas fa-money-bill-wave text-success me-2"></i>Cash on Delivery (COD)</strong>
                                        <p class="mb-0 text-muted small">Pay when you receive the product</p>
                                    </div>
                                    <i class="fas fa-check-circle text-success fs-4"></i>
                                </div>
                            </label>
                        </div>

                        <div class="form-check p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod"
                                   value="Esewa" id="esewa" disabled>
                            <label class="form-check-label w-100" for="esewa">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><i class="fas fa-wallet text-primary me-2"></i>eSewa</strong>
                                        <p class="mb-0 text-muted small">Coming Soon</p>
                                    </div>
                                    <span class="badge bg-warning">Coming Soon</span>
                                </div>
                            </label>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Right Column - Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-clipboard-list me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Products List -->
                        <div class="mb-3">
                            <h6 class="mb-3">Items (@Model.TotalItems)</h6>
                            <div style="max-height: 300px; overflow-y: auto;">
                                @foreach (var item in Model.CartItems)
                                {
                                    <div class="d-flex mb-3 pb-3 border-bottom">
                                        <div class="me-2">
                                            @if (!string.IsNullOrEmpty(item.Image))
                                            {
                                                <img src="data:image/jpeg;base64,@item.Image"
                                                     alt="@item.ProductName"
                                                     class="rounded"
                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                     style="width: 50px; height: 50px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 small">@item.ProductName</h6>
                                            <small class="text-muted">Qty: @item.Quantity</small>
                                        </div>
                                        <div class="text-end">
                                            <strong class="text-success">Rs. @item.SubTotal.ToString("N2")</strong>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Price Breakdown -->
                        <div class="border-top pt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <strong>Rs. @Model.SubTotal.ToString("N2")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                                <span>Delivery Fee:</span>
                                <strong>Rs. @Model.DeliveryFee.ToString("N2")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="mb-0">Total:</h5>
                                <h5 class="mb-0 text-success">Rs. @Model.TotalAmount.ToString("N2")</h5>
                            </div>
                        </div>

                        <!-- Place Order Button -->
                        <button type="submit" class="btn btn-success btn-lg w-100 mb-2">
                            <i class="fas fa-check-circle me-2"></i>Place Order
                        </button>

                        <a asp-action="Cart" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-2"></i>Back to Cart
                        </a>

                        <!-- Security Badge -->
                        <div class="mt-3 p-3 bg-light rounded text-center">
                            <i class="fas fa-shield-alt text-success fs-3 mb-2"></i>
                            <p class="mb-0 small">
                                <strong>Safe & Secure Checkout</strong><br>
                                Your information is protected
                            </p>

                            <hr class="my-3">

                            <div class="text-start small">
                                <p class="mb-1"><strong>Order Status Guide:</strong></p>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fas fa-check-circle text-primary me-1"></i> <strong>Confirmed:</strong> Order is accepted by the seller.</li>
                                    <li><i class="fas fa-shipping-fast text-warning me-1"></i> <strong>Shipped:</strong> Order is handed over to the delivery partner.</li>
                                    <li><i class="fas fa-warehouse text-success me-1"></i> <strong>Delivered:</strong> Product has arrived at the delivery partner's warehouse — you can collect your parcel.</li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}