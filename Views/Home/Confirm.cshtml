<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmed - Thank You</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container py-5">
        <!-- Success Header -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-4">
                    <div class="success-icon mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="text-success fw-bold mb-2">Order Confirmed!</h1>
                    <h3 class="text-muted">Thank You for Your Purchase</h3>
                </div>
            </div>
        </div>

        <!-- Order Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-success text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">
                                <i class="fas fa-shopping-bag me-2"></i>Order Details
                            </h4>
                            <span class="badge bg-light text-success fs-6">Cash on Delivery</span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- Order Information -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="order-info-item">
                                    <h6 class="text-muted mb-1">Order Number</h6>
                                    <p class="fw-bold text-primary mb-0">#ORD-2025-001234</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="order-info-item">
                                    <h6 class="text-muted mb-1">Order Date</h6>
                                    <p class="mb-0">August 03, 2025</p>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="payment-method-section mb-4">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="payment-icon me-3">
                                            <i class="fas fa-money-bill-wave text-success fa-2x"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Payment Method</h6>
                                            <p class="text-success fw-bold mb-0">Cash on Delivery (COD)</p>
                                            <small class="text-muted">You'll pay when your order arrives</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="order-summary mb-4">
                            <h6 class="mb-3">Order Summary</h6>
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td class="ps-0">
                                                <div class="d-flex align-items-center">
                                                    <img src="https://via.placeholder.com/60x60" alt="Product" class="rounded me-3">
                                                    <div>
                                                        <h6 class="mb-1">Premium Notebook Set</h6>
                                                        <small class="text-muted">Quantity: 2</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end pe-0">
                                                <p class="mb-0 fw-bold">Rs. 850.00</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="ps-0">
                                                <div class="d-flex align-items-center">
                                                    <img src="https://via.placeholder.com/60x60" alt="Product" class="rounded me-3">
                                                    <div>
                                                        <h6 class="mb-1">Blue Pen Pack</h6>
                                                        <small class="text-muted">Quantity: 3</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end pe-0">
                                                <p class="mb-0 fw-bold">Rs. 450.00</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <hr>

                            <!-- Price Breakdown -->
                            <div class="price-breakdown">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>Rs. 1,300.00</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Delivery Fee:</span>
                                    <span>Rs. 60.00</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Bulk Discount (5%):</span>
                                    <span>- Rs. 65.00</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fs-5 fw-bold text-primary">
                                    <span>Total Amount:</span>
                                    <span>Rs. 1,295.00</span>
                                </div>
                                <small class="text-muted d-block mt-1">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Amount to be paid on delivery
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delivery Information -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 mb-4">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0">
                            <i class="fas fa-truck me-2"></i>Delivery Information
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <!-- Expected Delivery -->
                        <div class="delivery-timeline mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="delivery-info-card text-center p-3 bg-light rounded">
                                        <i class="fas fa-calendar-alt text-primary fa-2x mb-2"></i>
                                        <h6 class="mb-1">Expected Delivery</h6>
                                        <p class="text-primary fw-bold fs-5 mb-0">Aug 08 - Aug 10, 2025</p>
                                        <small class="text-muted">5-7 business days</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="delivery-info-card text-center p-3 bg-light rounded">
                                        <i class="fas fa-clock text-success fa-2x mb-2"></i>
                                        <h6 class="mb-1">Delivery Time</h6>
                                        <p class="text-success fw-bold fs-5 mb-0">9:00 AM - 6:00 PM</p>
                                        <small class="text-muted">Monday to Saturday</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delivery Address -->
                        <div class="delivery-address mb-4">
                            <h6 class="mb-3">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>Delivery Address
                            </h6>
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <p class="mb-1 fw-bold">John Doe</p>
                                    <p class="mb-1">Biratnagar-10, Main Road</p>
                                    <p class="mb-1">Near Mahendra Chowk</p>
                                    <p class="mb-1">Biratnagar, Morang</p>
                                    <p class="mb-0">Phone: +977-9812345678</p>
                                </div>
                            </div>
                        </div>

                        <!-- Delivery Progress -->
                        <div class="delivery-progress mb-4">
                            <h6 class="mb-3">
                                <i class="fas fa-route text-info me-2"></i>Order Status
                            </h6>
                            <div class="progress-timeline">
                                <div class="timeline-item completed">
                                    <div class="timeline-marker">
                                        <i class="fas fa-check"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Order Confirmed</h6>
                                        <small class="text-muted">Aug 03, 2025 - 2:30 PM</small>
                                    </div>
                                </div>
                                <div class="timeline-item active">
                                    <div class="timeline-marker">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Processing</h6>
                                        <small class="text-muted">We're preparing your order</small>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        <i class="fas fa-shipping-fast"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Shipped</h6>
                                        <small class="text-muted">Expected: Aug 05, 2025</small>
                                    </div>
                                </div>
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        <i class="fas fa-home"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">Delivered</h6>
                                        <small class="text-muted">Expected: Aug 08-10, 2025</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Important Notes -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Important Notes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        Have exact change ready for COD
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        Valid ID required at delivery
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        Inspect items before payment
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas fa-phone text-primary me-2"></i>
                                        Call us: +977-021-123456
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-envelope text-info me-2"></i>
                                        Email: support@stationerystore.com
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-clock text-warning me-2"></i>
                                        Support: 9 AM - 7 PM (Mon-Sat)
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8">
                <div class="text-center">
                    <a href="/Home/Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                    </a>
                    <a href="/Account/Orders" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-list me-2"></i>View My Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        .success-icon {
            animation: checkmark 0.6s ease-in-out;
        }

       
            transform: scale(0);
            opacity: 0;
        }

        50% {
            transform: scale(1.2);
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }

        .order-info-item {
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #28a745;
            margin-bottom: 15px;
        }

        .delivery-info-card {
            transition: transform 0.3s ease;
        }

            .delivery-info-card:hover {
                transform: translateY(-3px);
            }

        .progress-timeline {
            position: relative;
        }

        .timeline-item {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            position: relative;
        }

            .timeline-item:not(:last-child)::after {
                content: '';
                position: absolute;
                left: 20px;
                top: 40px;
                width: 2px;
                height: 25px;
                background-color: #dee2e6;
            }

            .timeline-item.completed::after {
                background-color: #28a745;
            }

            .timeline-item.active::after {
                background-color: #007bff;
            }

        .timeline-marker {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: white;
            font-size: 14px;
        }

        .timeline-item.completed .timeline-marker {
            background-color: #28a745;
        }

        .timeline-item.active .timeline-marker {
            background-color: #007bff;
            animation: pulse 2s infinite;
        }

        
            box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.7);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(0, 123, 255, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(0, 123, 255, 0);
        }

        }

        .timeline-content h6 {
            margin-bottom: 5px;
            font-weight: 600;
        }

        .timeline-item.completed .timeline-content h6 {
            color: #28a745;
        }

        .timeline-item.active .timeline-content h6 {
            color: #007bff;
        }

        .card {
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-scroll to top on page load
        window.scrollTo(0, 0);

        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate the success icon
            const successIcon = document.querySelector('.success-icon i');
            setTimeout(() => {
                successIcon.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    successIcon.style.transform = 'scale(1)';
                }, 200);
            }, 600);

            // Simulate order tracking updates (demo purposes)
            setTimeout(() => {
                console.log('Order tracking simulation - this would connect to real tracking API');
            }, 2000);
        });
    </script>

</body>
</html>