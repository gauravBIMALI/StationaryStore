@model ClzProject.Models.Order

@{
    ViewData["Title"] = "Order Details - " + Model.OrderNumber;
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="fas fa-file-invoice text-primary"></i> Order Details
            </h2>
            
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Order Status -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Order Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Order Number</p>
                            <h5 class="text-primary">@Model.OrderNumber</h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Order Date</p>
                            <h6>@Model.OrderDate.ToString("dd MMMM yyyy, hh:mm tt")</h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Current Status</p>
                            @if (Model.OrderStatus == "Pending")
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-clock me-1"></i>Pending
                                </span>
                            }
                            else if (Model.OrderStatus == "Confirmed")
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="fas fa-check me-1"></i>Confirmed
                                </span>
                            }
                            else if (Model.OrderStatus == "Shipped")
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-shipping-fast me-1"></i>Shipped
                                </span>
                            }
                            else if (Model.OrderStatus == "Delivered")
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Delivered
                                </span>
                            }
                            else if (Model.OrderStatus == "Cancelled")
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Cancelled
                                </span>
                            }
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Payment Method</p>
                            <p class="mb-0 fw-semibold">
                                <i class="fas fa-money-bill-wave me-2 text-success"></i>@Model.PaymentMethod
                            </p>
                        </div>
                    </div>

                    <!-- Cancel Button -->
                    @if (Model.OrderStatus == "Pending")
                    {
                        <div class="mt-3">
                            <form asp-action="CancelOrder" method="post"
                                  onsubmit="return confirm('Are you sure you want to cancel this order?')">
                                <input type="hidden" name="orderId" value="@Model.OrderId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-times-circle me-2"></i>Cancel Order
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>

            <!-- Delivery Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>Delivery Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="fas fa-user me-2 text-muted"></i>Name:</strong><br>
                                @Model.DeliveryName
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-phone me-2 text-muted"></i>Phone:</strong><br>
                                @Model.DeliveryPhone
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="fas fa-home me-2 text-muted"></i>Address:</strong><br>
                                @Model.DeliveryAddress
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-city me-2 text-muted"></i>City:</strong><br>
                                @Model.DeliveryCity
                                @if (!string.IsNullOrEmpty(Model.DeliveryState))
                                {
                                    <text>, @Model.DeliveryState</text>
                                }
                            </p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.DeliveryNote))
                        {
                            <div class="col-12 mt-2">
                                <p class="mb-0">
                                    <strong><i class="fas fa-sticky-note me-2 text-muted"></i>Note:</strong><br>
                                    <em>@Model.DeliveryNote</em>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-box me-2"></i>Order Items (@Model.OrderItems.Count)
                    </h6>
                </div>
                <div class="card-body p-0">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="p-3 border-bottom">
                            <div class="row align-items-center">
                                <div class="col-md-2 col-3">
                                    @if (!string.IsNullOrEmpty(item.ProductImage))
                                    {
                                        <img src="data:image/jpeg;base64,@item.ProductImage"
                                             alt="@item.ProductName"
                                             class="img-fluid rounded shadow-sm"
                                             style="max-height: 80px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="height: 80px;">
                                            <i class="fas fa-image fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6 col-9">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <p class="mb-0 text-muted small">
                                        Rs. @item.Price.ToString("N2") × @item.Quantity
                                    </p>
                                </div>
                                <div class="col-md-4 text-md-end mt-2 mt-md-0">
                                    <h6 class="text-success mb-0">
                                        Rs. @((item.Price * item.Quantity).ToString("N2"))
                                    </h6>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column - Summary -->
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span>Subtotal:</span>
                <strong>Rs. @Model.TotalAmount.ToString("N2")</strong>
            </div>
            <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                <span>Delivery Fee:</span>
                <strong>Rs. @Model.DeliveryFee.ToString("N2")</strong>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0">Total:</h5>
                <h5 class="mb-0 text-success">
                    Rs. @((Model.TotalAmount + Model.DeliveryFee).ToString("N2"))
                </h5>
            </div>

            <button onclick="window.print()" class="btn btn-outline-primary w-20 mb-2">
                <i class="fas fa-print me-2"></i>Print Invoice
            </button>

            <a asp-action="MyOrders" class="btn btn-outline-secondary w-20">
                <i class="fas fa-arrow-left me-2"></i>Back to Orders
            </a>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, nav, .breadcrumb, .sticky-top {
            display: none !important;
        }

        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
    }
</style>