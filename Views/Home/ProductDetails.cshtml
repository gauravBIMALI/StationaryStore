@model ClzProject.Models.Product
@{
    ViewData["Title"] = Model.ProductName + " - Product Details";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <!-- Main Product Section - Centered -->
        <div class="col-lg-10">
            <div class="row">
                <!-- Product Image -->
                <div class="col-md-6 mb-4">
                    <div class="product-image-container">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="data:image/jpeg;base64,@Model.Image"
                                 alt="@Model.ProductName"
                                 class="img-fluid rounded shadow main-product-image"
                                 style="width: 100%; max-height: 500px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded shadow"
                                 style="height: 500px;">
                                <i class="fas fa-image fa-5x text-muted"></i>
                            </div>
                        }
                    </div>

                    <!-- Seller Information Card (Below Image) -->
                    <div class="seller-info-card mt-3">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <button class="btn btn-link p-0 text-decoration-none fw-semibold" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#sellerInfo"
                                            aria-expanded="false" aria-controls="sellerInfo">
                                        <i class="fas fa-store me-2 text-primary"></i>Seller Information
                                        <i class="fas fa-chevron-down float-end mt-1"></i>
                                    </button>
                                </h6>
                            </div>
                            <div id="sellerInfo" class="collapse">
                                <div class="card-body">
                                    @if (Model.Seller != null)
                                    {
                                        <div class="seller-details">
                                            

                                            <!-- Business Name -->
                                            @if (!string.IsNullOrEmpty(Model.Seller.BusinessName))
                                            {
                                                <div class="mb-2">
                                                    <strong class="text-primary">@Model.Seller.BusinessName</strong>
                                                </div>
                                            }

                                            <!-- Seller Name -->
                                            <div class="mb-2">
                                                <i class="fas fa-user me-2 text-muted"></i>
                                                <span>@Model.Seller.FullName</span>
                                            </div>

                                            <!-- Location -->
                                            @if (!string.IsNullOrEmpty(Model.Seller.Location))
                                            {
                                                <div class="mb-2">
                                                    <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                                    <span>@Model.Seller.Location</span>
                                                </div>
                                            }

                                            <!-- Business Type -->
                                            @if (!string.IsNullOrEmpty(Model.Seller.BusinessType))
                                            {
                                                <div class="mb-2">
                                                    <i class="fas fa-briefcase me-2 text-muted"></i>
                                                    <span>@Model.Seller.BusinessType</span>
                                                </div>
                                            }

                                            <!-- Contact Button (if needed) -->
                                            @* <div class="mt-3">
                                                <button class="btn btn-outline-primary btn-sm w-100" onclick="contactSeller()">
                                                    <i class="fas fa-envelope me-2"></i>Contact Seller
                                                </button>
                                            </div> *@
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted text-center py-3">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Seller information not available
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Information -->
                <div class="col-md-6">
                    <div class="product-info-card">
                        <!-- Category Badge with Label -->
                        <div class="mb-3">
                            <span class="text-muted me-2">Category:</span>
                            <span class="badge bg-primary fs-6">@Model.CategoryType</span>
                        </div>

                        <!-- Product Name -->
                        <h1 class="product-title mb-3">@Model.ProductName</h1>

                        <!-- Price Section with Dynamic Discount -->
                        <div class="price-section mb-4">
                            <div class="d-flex align-items-center flex-wrap">
                                <h2 class="price-current text-danger mb-0 me-3" id="currentPrice">Rs. @Model.ProductPrice.ToString("N2")</h2>
                                <div id="discountInfo" style="display: none;">
                                    <span class="price-original text-muted text-decoration-line-through me-2" id="originalPrice">Rs. @Model.ProductPrice.ToString("N2")</span>
                                    <span class="discount-badge badge bg-success" id="discountBadge"></span>
                                </div>
                            </div>
                            <!-- Bulk Discount Information -->
                            <div class="bulk-discount-info mt-2">
                                <b>
                                    <small class="text-black">
                                        <i class="fas fa-info-circle me-1"></i>
                                        <strong>Bulk Discounts:</strong> 16-30 Quantity: 5% off | 31-50 Quantity: 10% off | 51+ Quantity: 13% off
                                    </small>
                                </b>
                            </div>
                        </div>

                        <!-- Stock Status -->
                        <div class="stock-section mb-3">
                            @if (Model.ProductQuantity > 0)
                            {
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success me-2">
                                        <i class="fas fa-check-circle me-1"></i>In Stock
                                    </span>
                                    <span class="text-muted">@Model.ProductQuantity units available</span>
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>


                        <form asp-action="AddToCart" asp-controller="Home" method="post" class="mb-4">
                            <input type="hidden" name="productId" value="@Model.ProductID" />

                            <!-- Quantity Section -->
                            <div class="quantity-section mb-4">
                                <label class="form-label fw-semibold">Quantity:</label>
                                <div class="d-flex align-items-center">
                                    <div class="quantity-controls me-3">
                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="decreaseQuantity()">-</button>
                                        <input type="number" name="quantity" id="quantity" value="1"
                                               min="1" max="@Model.ProductQuantity"
                                               class="form-control text-center mx-2"
                                               style="width: 80px;" onchange="updatePrice()">
                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="increaseQuantity()">+</button>
                                    </div>
                                    <span class="text-muted">@Model.ProductQuantity pieces available</span>
                                </div>
                            </div>

                            <!-- Buttons Row -->
                            <div class="row g-2">
                                <!-- Add to Cart -->
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                    </button>
                                </div>

                                <!-- Buy Now -->
                                <div class="col-6">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form asp-action="BuyNow" asp-controller="Home" method="post" class="d-inline w-100">
                                            <input type="hidden" name="productId" value="@Model.ProductID" />
                                            <input type="hidden" id="buyQuantity" name="quantity" value="1" />

                                            <button type="submit" class="btn btn-danger btn-lg w-100">
                                                <i class="fas fa-bolt me-2"></i>Buy Now
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger btn-lg w-100" onclick="showLoginPrompt()">
                                            <i class="fas fa-bolt me-2"></i>Buy Now
                                        </button>
                                    }
                                </div>
                            </div>
                        </form>

                        <!-- Out of Stock -->
                        @if (@Model.ProductQuantity <= 0)
                        {
                            <button class="btn btn-secondary btn-lg w-100 mt-3" disabled>
                                <i class="fas fa-times me-2"></i>Out of Stock
                            </button>
                        }

                        <script>
                            function syncQuantity() {
                                document.getElementById('buyQuantity').value = document.getElementById('quantity').value;
                            }

                            function increaseQuantity() {
                                const qty = document.getElementById('quantity');
                                if (qty.value < qty.max) qty.value++;
                                syncQuantity();
                            }

                            function decreaseQuantity() {
                                const qty = document.getElementById('quantity');
                                if (qty.value > 1) qty.value--;
                                syncQuantity();
                            }

                            function updatePrice() {
                                syncQuantity();
                            }
                        </script>

                        <!-- Delivery Info -->
                        <div class="delivery-info mb-4">
                            <div class="card bg-light border-0 shadow-sm">
                                <div class="card-body p-3">
                                    <h6 class="mb-3 text-primary">
                                        <i class="fas fa-truck me-2"></i>Delivery Options
                                    </h6>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <small class="text-muted d-block">
                                                <i class="fas fa-clock me-1"></i>Standard Delivery
                                            </small>
                                            <strong>3–7 days • Rs. 60</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Services -->
                        <div class="services-section">
                            <div class="row text-center">
                                <div class="col-3">
                                    <small class="d-block text-muted mt-1">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ProductReturn">
                                            <i class="fas fa-undo text-success fs-4"></i>
                                            <small class="d-block text-muted mt-1">Return</small>
                                        </a>
                                    </small>
                                </div>
                                <div class="col-3">
                                    <a asp-controller="Home" asp-action="Warranty" class="text-decoration-none">
                                        <i class="fas fa-shield-alt text-primary fs-4"></i>
                                        <small class="d-block text-muted mt-1">Warranty</small>
                                    </a>
                                </div>
                                <div class="col-3">
                                    <i class="fas fa-credit-card text-warning fs-4"></i>
                                    <small class="d-block text-muted mt-1">Cash on Delivery</small>
                                </div>
                                <div class="col-3">
                                    <i class="fas fa-credit-card text-warning fs-4"></i>
                                    <small class="d-block text-muted mt-1">Esewa</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Description Section -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Product Description</h5>
                            <p class="card-text">@Model.ProductDescription</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="row mt-4">
        <div class="col-12">
            @await Html.PartialAsync("_ProductComment", Model)
        </div>
    </div>

    <!-- You May Also Like Section - Bottom -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-heart me-2"></i>You May Also Like
                    </h4>
                </div>
                <div class="card-body p-3">
                    <div id="relatedProducts">
                        <div class="text-center p-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Products
            </a>
        </div>
    </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Login Required</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Please log in to add items to your cart and make purchases.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="/Account/Login" class="btn btn-primary">Login</a>
                <a href="/Account/Register" class="btn btn-success">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<style>
    .product-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
    }

    .price-current {
        font-size: 2rem;
        font-weight: 700;
    }

    .price-original {
        font-size: 1.2rem;
    }

    .discount-badge {
        font-size: 0.8rem;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
    }

        .quantity-controls input {
            border-left: none;
            border-right: none;
        }

    .main-product-image {
        transition: transform 0.3s ease;
    }

        .main-product-image:hover {
            transform: scale(1.05);
        }

    .related-product-card {
        transition: all 0.3s ease;
        cursor: pointer;
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

        .related-product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .services-section i {
        margin-bottom: 5px;
    }

    .bulk-discount-info {
        background-color: #e8f4f8;
        padding: 8px;
        border-radius: 5px;
        border-left: 3px solid #17a2b8;
        font-size: 1rem;
    }

    .action-buttons .btn {
        font-size: 0.9rem;
        padding: 10px 15px;
    }

    .seller-info-card {
        margin-top: 15px;
    }

        .seller-info-card .card-header {
            border-bottom: 1px solid #dee2e6;
        }

        .seller-info-card .btn-link {
            color: #333;
            width: 100%;
            text-align: left;
        }

        .seller-info-card .btn-link:hover {
                color: #0d6efd;
                text-decoration: none;
        }

    .seller-details {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 15px;
        margin: -15px;
    }
</style>

<script>


    // Load cart count on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateCartCount();
    });


    const basePrice = @Model.ProductPrice;

    document.addEventListener('DOMContentLoaded', function() {
        loadRelatedProducts();
        updatePrice(); // Initialize price display
    });

    function loadRelatedProducts() {
        const currentCategory = '@Model.CategoryType';
        const currentProductId = @Model.ProductID;

        fetch(`/Home/GetRelatedProducts?categoryType=${encodeURIComponent(currentCategory)}&excludeId=${currentProductId}&count=6`)
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('relatedProducts');

                if (data.success && data.products && data.products.length > 0) {
                    let html = '<div class="row">';
                    data.products.forEach(product => {
                        html += `
                            <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                                <div class="card related-product-card h-100" onclick="window.location.href='/Home/ProductDetails/${product.productID}'">
                                    <div class="product-image-placeholder bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                        ${product.hasImage ?
                                            `<div class="image-container w-100 h-100" data-product-id="${product.productID}">
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                                                </div>
                                            </div>` :
                                            '<i class="fas fa-image fa-2x text-muted"></i>'
                                        }
                                    </div>
                                    <div class="card-body p-2">
                                        <h6 class="card-title mb-2" style="font-size: 0.85rem; line-height: 1.2; height: 2.4em; overflow: hidden;">
                                            ${product.productName}
                                        </h6>
                                        <p class="card-text mb-2">
                                            <span class="text-danger fw-bold">Rs. ${parseFloat(product.productPrice).toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2})}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    container.innerHTML = html;

                    // Load images for related products
                    loadRelatedProductImages();
                } else {
                    container.innerHTML = `
                        <div class="text-center p-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No related products found</h5>
                            <p class="text-muted">Check out our other categories for more products!</p>
                        </div>
                    `;
                }
            })
            .catch(error => {
                console.error('Error loading related products:', error);
                document.getElementById('relatedProducts').innerHTML = `
                    <div class="text-center p-4">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning mb-3"></i>
                        <h5 class="text-muted">Failed to load related products</h5>
                        <p class="text-muted">Please try refreshing the page.</p>
                    </div>
                `;
            });
    }

    function loadRelatedProductImages() {
        const imageContainers = document.querySelectorAll('#relatedProducts .image-container');

        imageContainers.forEach(container => {
            const productId = container.getAttribute('data-product-id');

            fetch(`/Home/GetProductImage?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.image) {
                        container.innerHTML = `
                            <img src="data:image/jpeg;base64,${data.image}"
                                 alt="Product Image"
                                 class="img-fluid rounded"
                                 style="width: 100%; height: 150px; object-fit: cover;">
                        `;
                    } else {
                        container.innerHTML = '<div class="d-flex align-items-center justify-content-center h-100"><i class="fas fa-image fa-2x text-muted"></i></div>';
                    }
                })
                .catch(error => {
                    container.innerHTML = '<div class="d-flex align-items-center justify-content-center h-100"><i class="fas fa-exclamation-triangle fa-2x text-warning"></i></div>';
                });
        });
    }

    

    function increaseQuantity() {
        const quantityInput = document.getElementById('quantity');
        const currentValue = parseInt(quantityInput.value);
        const maxValue = parseInt(quantityInput.max);

        if (currentValue < maxValue) {
            quantityInput.value = currentValue + 1;
            updatePrice();
        }
    }

    function decreaseQuantity() {
        const quantityInput = document.getElementById('quantity');
        const currentValue = parseInt(quantityInput.value);
        const minValue = parseInt(quantityInput.min);

        if (currentValue > minValue) {
            quantityInput.value = currentValue - 1;
            updatePrice();
        }
    }

    function showLoginPrompt() {
        var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
        loginModal.show();
    }

    function contactSeller() {
        // Add your contact seller functionality here
        alert('Contact seller functionality to be implemented');
    }
</script>