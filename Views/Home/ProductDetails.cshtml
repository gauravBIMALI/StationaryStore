@model ClzProject.Models.Product
@{
    ViewData["Title"] = Model.ProductName + " - Product Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="data:image/jpeg;base64,@Model.Image"
                     alt="@Model.ProductName"
                     class="img-fluid rounded shadow"
                     style="width: 100%; max-height: 500px; object-fit: cover;">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow"
                     style="height: 500px;">
                    <i class="fas fa-image fa-5x text-muted"></i>
                </div>
            }
        </div>

        <!-- Product Information -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Category Badge -->
                    <span class="badge bg-primary fs-6 mb-3">@Model.CategoryType</span>

                    <!-- Product Name -->
                    <h1 class="text-dark mb-3">@Model.ProductName</h1>

                    <!-- Price -->
                    <h2 class="text-success mb-4">@Model.ProductPrice.ToString("C")</h2>

                    <!-- Stock Status -->
                    <div class="mb-3">
                        @if (Model.ProductQuantity > 0)
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check-circle me-1"></i>@Model.ProductQuantity units in stock
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-times-circle me-1"></i>Out of Stock
                            </span>
                        }
                    </div>

                    <!-- Description -->
                    <h5>Description:</h5>
                    <p class="text-muted mb-4">@Model.ProductDescription</p>

                    <!-- Action Buttons -->
                    @if (Model.ProductQuantity > 0)
                    {
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" onclick="showLoginPrompt()">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                            </button>
                            <button class="btn btn-outline-primary" onclick="showLoginPrompt()">
                                <i class="fas fa-heart me-2"></i>Add to Wishlist
                            </button>
                        </div>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="fas fa-times me-2"></i>Out of Stock
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Products
            </a>
        </div>
    </div>
</div>

<!-- Login Modal (same as in Index) -->
<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Login Required</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Please log in to add items to your cart and make purchases.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="/Account/Login" class="btn btn-primary">Login</a>
                <a href="/Account/Register" class="btn btn-success">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<script>
    function showLoginPrompt() {
        var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
        loginModal.show();
    }
</script>