@model List<ClzProject.Models.SellerCategory>

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddCategory</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Code
            </th>
            <th>
                Category Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellerCategoryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerCategoryType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SellerCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SellerCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SellerCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
