@model ClzProject.ViewModels.SellerOrderViewModel

@{
    ViewData["Title"] = "Order Details - " + Model.OrderNumber;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-file-invoice text-primary me-2"></i>Order Details</h2>
            
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Order Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Order Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Order Number</p>
                            <h5 class="text-primary">@Model.OrderNumber</h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Order Date</p>
                            <h6>@Model.OrderDate.ToString("dd MMMM yyyy, hh:mm tt")</h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Current Status</p>
                            @if (Model.OrderStatus == "Pending")
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-clock me-1"></i>Pending
                                </span>
                            }
                            else if (Model.OrderStatus == "Confirmed")
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="fas fa-check me-1"></i>Confirmed
                                </span>
                            }
                            else if (Model.OrderStatus == "Shipped")
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-shipping-fast me-1"></i>Shipped
                                </span>
                            }
                            else if (Model.OrderStatus == "Delivered")
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Delivered
                                </span>
                            }
                            else if (Model.OrderStatus == "Cancelled")
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Cancelled
                                </span>
                            }
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="mb-1 text-muted">Payment Method</p>
                            <p class="mb-0 fw-semibold">
                                <i class="fas fa-money-bill-wave me-2 text-success"></i>@Model.PaymentMethod
                            </p>
                        </div>
                    </div>

                    <!-- Order Status Update Buttons -->
                    @if (Model.OrderStatus != "Cancelled" && Model.OrderStatus != "Delivered")
                    {
                        <div class="mt-4 pt-3 border-top">
                            <h6 class="mb-3">
                                <i class="fas fa-tasks me-2"></i>Update Order Status
                            </h6>

                            <div class="d-flex flex-wrap gap-2">
                                @if (Model.OrderStatus == "Pending")
                                {
                                    <form asp-action="ConfirmOrder" method="post" class="d-inline">
                                        <input type="hidden" name="orderItemId" value="@Model.OrderItemId" />
                                        <button type="submit" class="btn btn-success"
                                                onclick="return confirm('Confirm this order? This means you accept and will process it.')">
                                            <i class="fas fa-check-circle me-2"></i>Confirm Order
                                        </button>
                                    </form>
                                }
                                else if (Model.OrderStatus == "Confirmed")
                                {
                                    <form asp-action="ShipOrder" method="post" class="d-inline">
                                        <input type="hidden" name="orderItemId" value="@Model.OrderItemId" />
                                        <button type="submit" class="btn btn-primary"
                                                onclick="return confirm('Mark this order as shipped? Make sure you have dispatched the product.')">
                                            <i class="fas fa-shipping-fast me-2"></i>Mark as Shipped
                                        </button>
                                    </form>
                                }
                                else if (Model.OrderStatus == "Shipped")
                                {
                                    <form asp-action="DeliverOrder" method="post" class="d-inline">
                                        <input type="hidden" name="orderItemId" value="@Model.OrderItemId" />
                                        <button type="submit" class="btn btn-success"
                                                onclick="return confirm('Mark this order as delivered? Confirm only when customer has received the product.')">
                                            <i class="fas fa-check-double me-2"></i>Mark as Delivered
                                        </button>
                                    </form>
                                }
                            </div>

                            <!-- Status Progress Bar -->
                            <div class="mt-4">
                                <div class="progress" style="height: 30px;">
                                    @{
                                        var progressWidth = Model.OrderStatus switch
                                        {
                                            "Pending" => "25%",
                                            "Confirmed" => "50%",
                                            "Shipped" => "75%",
                                            "Delivered" => "100%",
                                            "Cancelled" => "0%",
                                            _ => "0%"
                                        };

                                        var progressColor = Model.OrderStatus switch
                                        {
                                            "Pending" => "bg-warning",
                                            "Confirmed" => "bg-info",
                                            "Shipped" => "bg-primary",
                                            "Delivered" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <div class="progress-bar @progressColor progress-bar-striped progress-bar-animated"
                                         role="progressbar"
                                         style="width: @progressWidth"
                                         aria-valuenow="@progressWidth.TrimEnd('%')"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @Model.OrderStatus
                                    </div>
                                </div>
                            </div>

                            <!-- Status Timeline -->
                            <div class="mt-4">
                                <h6 class="mb-3">Order Timeline</h6>
                                <div class="timeline">
                                    <div class="timeline-item @(Model.OrderStatus == "Pending" || Model.OrderStatus == "Confirmed" || Model.OrderStatus == "Shipped" || Model.OrderStatus == "Delivered" ? "completed" : "")">
                                        <i class="fas fa-clock"></i>
                                        <span>Pending</span>
                                    </div>
                                    <div class="timeline-item @(Model.OrderStatus == "Confirmed" || Model.OrderStatus == "Shipped" || Model.OrderStatus == "Delivered" ? "completed" : "")">
                                        <i class="fas fa-check"></i>
                                        <span>Confirmed</span>
                                    </div>
                                    <div class="timeline-item @(Model.OrderStatus == "Shipped" || Model.OrderStatus == "Delivered" ? "completed" : "")">
                                        <i class="fas fa-shipping-fast"></i>
                                        <span>Shipped</span>
                                    </div>
                                    <div class="timeline-item @(Model.OrderStatus == "Delivered" ? "completed" : "")">
                                        <i class="fas fa-check-double"></i>
                                        <span>Delivered</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.OrderStatus == "Cancelled")
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-times-circle me-2"></i>
                            <strong>This order has been cancelled by the buyer.</strong>
                        </div>
                    }
                    else if (Model.OrderStatus == "Delivered")
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>This order has been successfully delivered!</strong>
                        </div>
                    }
                </div>
            </div>

            <!-- Product Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-box me-2"></i>Product Details
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            @if (!string.IsNullOrEmpty(Model.ProductImage))
                            {
                                <img src="data:image/jpeg;base64,@Model.ProductImage"
                                     alt="@Model.ProductName"
                                     class="img-fluid rounded shadow-sm">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                     style="height: 150px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <h5 class="mb-3">@Model.ProductName</h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <p class="mb-2">
                                        <strong>Price per Unit:</strong><br>
                                        <span class="text-success fs-5">Rs. @Model.Price.ToString("N2")</span>
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <p class="mb-2">
                                        <strong>Quantity:</strong><br>
                                        <span class="fs-5">@Model.Quantity</span>
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <p class="mb-2">
                                        <strong>Total:</strong><br>
                                        <span class="text-success fs-5 fw-bold">Rs. @Model.Total.ToString("N2")</span>
                                    </p>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-user me-2"></i>Customer Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="fas fa-user me-2 text-muted"></i>Buyer Name:</strong><br>
                                @Model.BuyerName
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-phone me-2 text-muted"></i>Buyer Phone:</strong><br>
                                <a href="tel:@Model.BuyerPhone">@Model.BuyerPhone</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-shipping-fast me-2"></i>Delivery Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="fas fa-user me-2 text-muted"></i>Recipient Name:</strong><br>
                                @Model.DeliveryName
                            </p>
                            <p class="mb-2">
                                <strong><i class="fas fa-phone me-2 text-muted"></i>Contact Phone:</strong><br>
                                <a href="tel:@Model.DeliveryPhone">@Model.DeliveryPhone</a>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong><i class="fas fa-map-marker-alt me-2 text-muted"></i>Delivery Address:</strong><br>
                                @Model.DeliveryAddress<br>
                                @Model.DeliveryCity
                                @if (!string.IsNullOrEmpty(Model.DeliveryState))
                                {
                                    <text>, @Model.DeliveryState</text>
                                }
                            </p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.DeliveryNote))
                        {
                            <div class="col-12 mt-2">
                                <div class="alert alert-info mb-0">
                                    <strong><i class="fas fa-sticky-note me-2"></i>Delivery Note:</strong><br>
                                    <em>@Model.DeliveryNote</em>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Order Summary -->
            <!-- Order Summary -->
            <div class="card shadow-sm sticky-top mb-4" style="top: 20px;">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Order Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Product Total:</span>
                        <strong>Rs. @Model.Total.ToString("N2")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2 text-danger">
                        <span>Platform Fee (5%):</span>
                        <strong>- Rs. @((Model.Total * 0.05m).ToString("N2"))</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span><strong>Your Earnings (95%):</strong></span>
                        <h5 class="mb-0 text-success">Rs. @((Model.Total * 0.95m).ToString("N2"))</h5>
                    </div>

                    <div class="alert alert-info mb-3">
                        <small>
                            <i class="fas fa-info-circle me-1"></i>
                            Platform fee is deducted from completed orders only
                        </small>
                    </div>

                    <button onclick="window.print()" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-print me-2"></i>Print Details
                    </button>

                    <a asp-action="Orders" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i>Back to Orders
                    </a>
                </div>
            </div>

            
            <div class="mt-3 p-3 bg-light rounded text-center">
                <h3>Notice</h3>
                

                <hr class="my-3">

                <div class="text-start small">
                    <p class="mb-1"><strong>Order Status Guide:</strong></p>
                    <ul class="list-unstyled mb-3">
                        <li><i class="fas fa-check-circle text-primary mb-2 me-1"></i> <strong>Confirmed:</strong> Order is accepted by the seller.</li>
                        
                        <li><i class="fas fa-shipping-fast text-warning mb-2 me-1"></i> <strong>Shipped:</strong> Order is handed over to the delivery partner.</li>
                        <li><i class="fas fa-warehouse text-success mb-2 me-1"></i> <strong>Delivered:</strong> Product has arrived at the delivery partner's warehouse — you can collect your parcel.</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
  
    .timeline {
        display: flex;
        justify-content: space-between;
        position: relative;
        padding: 20px 0;
    }

    .timeline::before {
        content: '';
        position: absolute;
        top: 35px;
        left: 0;
        right: 0;
        height: 3px;
        background: #e9ecef;
        z-index: 0;
    }

    .timeline-item {
        position: relative;
        z-index: 1;
        text-align: center;
        flex: 1;
    }

        .timeline-item i {
            display: block;
            width: 50px;
            height: 50px;
            line-height: 50px;
            margin: 0 auto 10px;
            border-radius: 50%;
            background: #e9ecef;
            color: #6c757d;
            font-size: 1.2rem;
        }

        .timeline-item.completed i {
            background: #28a745;
            color: white;
        }

        .timeline-item span {
            display: block;
            font-size: 0.9rem;
            font-weight: 600;
            color: #6c757d;
        }

        .timeline-item.completed span {
            color: #28a745;
        }

    @@media print {
        .btn, nav, .breadcrumb, .sticky-top, .card-footer, .timeline, .progress {
            display: none !important;
        }

        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
    }


</style>