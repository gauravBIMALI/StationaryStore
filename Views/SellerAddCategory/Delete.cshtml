@model ClzProject.ViewModels.SellerAddCategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">🗑️ Delete Category</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <h5 class="alert-heading">⚠️ Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
                    </div>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.SellerCategoryCode)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Html.DisplayFor(model => model.SellerCategoryCode)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.SellerCategoryType)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Html.DisplayFor(model => model.SellerCategoryType)</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="SellerCategoryId" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                🔙 Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                🗑️ Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>