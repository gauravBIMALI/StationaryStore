@model ClzProject.ViewModels.SellerAddCategoryViewModel

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">🔍 Category Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.SellerCategoryCode)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Html.DisplayFor(model => model.SellerCategoryCode)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.SellerCategoryType)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="form-control-plaintext">@Html.DisplayFor(model => model.SellerCategoryType)</span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            🔙 Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.SellerCategoryId" class="btn btn-primary">
                                ✏️ Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>