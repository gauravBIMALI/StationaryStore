@model ClzProject.ViewModels.SellerAddCategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">✏️ Edit Seller Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="SellerCategoryId" />

                        <div class="mb-3">
                            <label asp-for="SellerCategoryCode" class="form-label"></label>
                            <input asp-for="SellerCategoryCode" class="form-control" />
                            <span asp-validation-for="SellerCategoryCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SellerCategoryType" class="form-label"></label>
                            <input asp-for="SellerCategoryType" class="form-control" />
                            <span asp-validation-for="SellerCategoryType" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                🔙 Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                💾 Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
