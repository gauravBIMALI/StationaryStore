@model IEnumerable<ClzProject.ViewModels.SellerAddCategoryViewModel>

@{
    ViewData["Title"] = "Add Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">📂 Seller Categories</h2>
        <a asp-action="Create" class="btn btn-success">
            ➕ Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered shadow-sm rounded">

            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SellerCategoryCode)</th>
                    <th>@Html.DisplayNameFor(model => model.SellerCategoryType)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SellerCategoryCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.SellerCategoryType)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.SellerCategoryId" class="btn btn-sm btn-warning me-1">
                                ✏️ Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.SellerCategoryId" class="btn btn-sm btn-info text-white me-1">
                                🔍 Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.SellerCategoryId" class="btn btn-sm btn-danger">
                                🗑️ Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
