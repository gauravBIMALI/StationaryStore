<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserRoles</title>
    <script type="importmap"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserRoles.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-users-cog me-2"></i>UserRoles
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>

                        @* Add every Admin accessible nav here *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-shield me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="ManageSeller">
                                            <i class="fas fa-tachometer-alt me-1"></i>Manage Seller
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="CreateSeller">
                                            <i class="fas fa-user-plus me-1"></i>Create Seller
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* Add every user accessible nav here *@

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="User">
                                    <i class="fas fa-user me-1"></i>User Portal
                                </a>
                            </li>
                        }

                        @* Add every Seller accessible nav here *@

                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Seller" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Seller" asp-action="AddCategory">
                                    <i class="fas fa-user me-1"></i>Add-Category
                                </a>
                            </li>
                        }


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-shrink-0">
        <div class="container py-5">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-auto bg-light text-muted py-4 border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    &copy; 2025 - Stationary Store, Developed By Gaurav Bimali - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small>Powered by ASP.NET Core</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>