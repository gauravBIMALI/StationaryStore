    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top ">
            <div class="container">

                <a class="navbar-brand fw-bold">
                    <img src="~/Images/StationaryLogo.png" alt="Logo" style="height: 50px;" class="rounded-circle" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @* Show Dashboard for Admin and Seller, Home for others *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admins" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Seller" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-1"></i>Home
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>

                        @* Add every Admin accessible nav here *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-shield me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admins" asp-action="Index">
                                            <i class="fas fa-users me-1"></i>Manage Seller
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="CreateSeller">
                                            <i class="fas fa-user-plus me-1"></i>Create Seller
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="FAQs" asp-action="Index">
                                            <i class="fas fa-question-circle me-1"></i>FAQs
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                            <i class="fas fa-tags me-1"></i>Add-Category
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="Admins" asp-action="ListProducts">
                                    <i class="fas fa-list me-1"></i>ListProducts
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="Admins" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>
                            

                            @* NEW: Buyer contact messages *@
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="AdminMessage" asp-action="Index">
                                    <i class="fas fa-business-time me-1"></i>Buyer Applications
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ChatBotFAQ" asp-action="Index">
                                    <i class="fas fa-robot me-2"></i> FAQs Chatbot
                                </a>
                            </li>

                        }

                        @* Add every user accessible nav here *@
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="FAQs" asp-action="BuyerFAQ">
                                    <i class="fas fa-question-circle me-1"></i>FAQs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="Buyer" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>

                            <!-- Business Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="businessDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                    <i class="fas fa-briefcase me-1"></i>Business
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="businessDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="BuyerContact" asp-action="Create">
                                            <i class="fas fa-business-time me-1"></i>Apply for Business
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="BuyerContact" asp-action="MySubmissions">
                                            <i class="fas fa-file-alt me-1"></i>My Applications
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item position-relative me-3">
                                <a class="nav-link" style="color: black;" asp-controller="Home" asp-action="Cart" title="Shopping Cart">
                                    <i class="fas fa-shopping-cart fa-lg"></i>Cart
                                    <span class="cart-count-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="display: none; font-size: 0.7rem;">
                                        0
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="Home" asp-action="MyOrders">
                                    <i class="fas fa-file-alt me-1"></i>My Orders
                                </a>
                            </li>
                        }

                        @* Add every Seller accessible nav here *@
                        @if (User.IsInRole("Seller"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="Seller" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: black;" asp-controller="FAQs" asp-action="SellerFAQ">
                                    <i class="fas fa-question-circle me-1"></i>FAQs
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                    <i class="fas fa-box me-2"></i>Products
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="productDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="AddProduct" asp-action="Create">
                                            <i class="fas fa-plus-circle me-1"></i> Sell Product
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AddProduct" asp-action="Index">
                                            <i class="fas fa-box me-1"></i> My Product
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item position-relative me-3">
                                <a class="nav-link" asp-controller="Seller" asp-action="Notifications" title="Notifications">
                                    <i class="fas fa-bell fa-lg"></i>
                                    <span class="notification-count-badge position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="display: none; font-size: 0.7rem;">
                                        0
                                    </span>
                                </a>
                            </li>

                           
                        }
                    </ul>
                    <script>



                        // Update pending comments count (call this on page load)
                        fetch('@Url.Action("GetPendingCommentsCount", "Seller")')
                            .then(response => response.json())
                            .then(data => {
                                if (data.success && data.count > 0) {
                                    document.getElementById('pendingCommentsCount').textContent = data.count;
                                    document.getElementById('pendingCommentsCount').style.display = 'inline';
                                } else {
                                    document.getElementById('pendingCommentsCount').style.display = 'none';
                                }
                            })
                            .catch(error => console.error('Error fetching pending comments count:', error));
                    </script>
                    <partial name="_LoginPartial" />
                </div>
                <button id="darkModeToggle" class="btn btn-outline-light ms-3">
                    <i id="darkModeIcon" class="fas fa-moon"></i>
                </button>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container py-3">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-auto bg-dark text-light py-4 border-top shadow-sm">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <small>
                        <i class="fas fa-copyright"></i> 2025 - <strong>Stationary Store</strong>,
                        Developed by <strong>Gaurav Bimali</strong> |
                        <a class="text-decoration-none text-info" asp-controller="Home" asp-action="Privacy">
                            <i class="fas fa-shield-alt"></i> Privacy Policy
                        </a>
                    </small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small>
                        <i class="fas fa-code"></i> Powered by <strong>ASP.NET Core</strong>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        const darkModeToggle = document.getElementById('darkModeToggle');

        // Load saved theme
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
            darkModeToggle.innerHTML = '<i class="fas fa-sun"></i> Light Mode';
        }

        darkModeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                darkModeToggle.innerHTML = '<i class="fas fa-sun"></i> Light Mode';
            } else {
                localStorage.setItem('theme', 'light');
                darkModeToggle.innerHTML = '<i class="fas fa-moon"></i> Dark Mode';
            }
        });
    </script>

    @if (User.Identity.IsAuthenticated)
    {
        <script>
            // Load cart count on every page
            document.addEventListener('DOMContentLoaded', function() {
                loadCartCount();
            });

            function loadCartCount() {
                fetch('@Url.Action("GetCartCount", "Home")')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.querySelector('.cart-count-badge');
                        if (badge) {
                            if (data.count > 0) {
                                badge.textContent = data.count;
                                badge.style.display = 'inline-flex';
                            } else {
                                badge.style.display = 'none';
                            }
                        }
                    })
                    .catch(error => console.error('Error loading cart count:', error));
            }

            // Make function globally available
            window.updateCartCount = loadCartCount;
        </script>
        @if (User.IsInRole("Seller"))
        {
            <script>
                // Load notification count on page load
                document.addEventListener('DOMContentLoaded', function() {
                    loadNotificationCount();

                    // Auto-refresh every 30 seconds
                    setInterval(loadNotificationCount, 30000);
                });

                function loadNotificationCount() {
                    fetch('@Url.Action("GetUnreadCount", "Seller")')
                        .then(response => response.json())
                        .then(data => {
                            const badge = document.querySelector('.notification-count-badge');
                            if (badge) {
                                if (data.count > 0) {
                                    badge.textContent = data.count;
                                    badge.style.display = 'inline-flex';

                                    // Update page title
                                    if (!document.title.startsWith('(')) {
                                        document.title = `(${data.count}) ${document.title}`;
                                    } else {
                                        document.title = document.title.replace(/\(\d+\)/, `(${data.count})`);
                                    }
                                } else {
                                    badge.style.display = 'none';
                                    // Remove count from title
                                    document.title = document.title.replace(/^\(\d+\)\s*/, '');
                                }
                            }
                        })
                        .catch(error => console.error('Error loading notification count:', error));
                }

                // Make function globally available
                window.updateNotificationCount = loadNotificationCount;
            </script>
        }
    }
</body>

</html>